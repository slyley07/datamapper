<%= form_for('/plots') do |f| %>
  <%= f.text_field :json, class: :json %>
  <%= f.submit 'Save', class: :saver, remote: :true %>
<% end %>

<div class="thing">
  <div class="thang">
    <%= @plot.user %>
    <br>
    <%= best_in_place @post, :title, place_holder: "Click me to tell me the title of the paper!" %>
    <br>
    <%= best_in_place @post, :website, place_holder: "Click here to tell me the website!" %>
    <br>
    <%= submit_tag "Submit!" %>
  </div>
</div>

<input type="button" id="delete-button" value="Delete Shape">

<input type="button" id="clear-button" value="Clear All Shapes">

<div class="map">
  <div id='map-canvas'></div>
</div>

<script type="text/javascript">
  function initialize() {
    var shapesMap = new ShapesMap(
      document.getElementById("map-canvas"),
      document.getElementById("delete-button"),
      document.getElementById("clear-button"));
	}

	google.maps.event.addDomListener(window, 'load', initialize);
</script>
